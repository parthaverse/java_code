/*Write a Java program to implement class mechanism, create a class, methods and invoke them inside main method.*/
import java.util.*;
class Square
{
    int r;
    void Square(int x)
    {
        r=x;
        System.out.println("Area of Square="+(r*r));
    }
}
class Rectangle
{
    int l,b;
    void Rectangle(int a, int c)
    {
        l=a;
        b=c;
        System.out.println("Area of Rectangle="+(l*b));
    }
    public static void main(String arg[])
    {
        Square a1 = new Square();
        Rectangle a2 = new Rectangle();
        a1.Square(2);
        a2.Rectangle(1,2);
    }
}
